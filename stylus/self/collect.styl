body
  background #efeff4
.header
  height 45px
  line-height 45px
  text-align center
  border-bottom 1px solid #d6d7dc
  position relative
  background-size 16px
  font-size 1.2rem
  background #fff
  &:after
    content ""
    display block
    height 2px
    width 12px
    background #323232
    transform rotate(45deg)
    position absolute
    left 20px
    top 26px
  &:before
    content ""
    display block
    height 2px
    width 12px
    background #323232
    transform rotate(-45deg)
    position absolute
    left 20px
    top 19px
.select
  height 40px
  margin-top 5px
  border-bottom 1px solid #d6d7dc
  background #fff
  line-height 40px
  text-align center
  font-size 1rem
  display flex
  .s-l
    height 40px
    flex 1
    position relative
    &:after
      content ""
      display block
      position absolute
      height 22px
      width 1px
      background #d6d7dc
      right 0
      top 9px
  .s-r
    height 40px
    flex 1
