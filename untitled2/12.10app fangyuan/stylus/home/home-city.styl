*
 outline none
 font-family Droid Sans Fallback
ul
  padding 0
  margin 0
  list-style 0
  li
    height 31px
    line-height 31px
    padding-left 2em
    color #323232
    position relative
    font-size 0.9rem
    &:after
      content ""
      display block
      position absolute
      width 94%
      height 1px
      background #e1e1e1
      bottom 0
      right 0
.header-city
  height 35px
  padding 5px 0 5px 0
  display flex
  border-bottom 1px solid #d6d7dc
  position relative
  .close
    height 35px
    width 40px
    color #ea5404
    line-height 35px
    font-size .9rem
    padding-left 1em
  .city
    flex 1
    height 35px
    line-height 35px
    color #646464
    font-size 1rem
    text-align center