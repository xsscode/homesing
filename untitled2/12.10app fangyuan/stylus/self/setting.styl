*
 outline none
 font-family Droid Sans Fallback
@import "../head.styl"

body
  background-color #efeff4
  padding 0
  margin 0
.header
  background #fff
  .kk
    color #323232

.set-sec
  height 50px
  background #fff
  box-sizing border-box
  padding 18px 12px 16px 12px
  line-height 16px
  font-size 1rem
  color #323232
  position relative
  border-bottom #d6d7dc
  margin-top 10px
.sec1
  .set-btn
    position absolute
    height 30px
    width 50px
    border-radius 15px
    background #ea5404
    top 10px
    right 12px
    .inner-btn
      height 28px
      width 28px
      box-shadow 0 0 10px 1px #d6d7dc
      border-radius 14px
      background #fff
      margin-top 1px
      margin-left 1px
.sec2
  &:after
    content ""
    position absolute
    display block
    width 12px
    height 2px
    background #b4b4b4
    transform rotate(45deg)
    top 21px
    right 12px
  &:before
    content ""
    position absolute
    display block
    width 12px
    height 2px
    background #b4b4b4
    transform rotate(-45deg)
    top 28px
    right 12px
  .num
    position absolute
    width 5rem
    height 50px
    right -10px
    top 0
    line-height 50px
    font-size .9rem
    color #b4b4b4b4
.sec4
  text-align center