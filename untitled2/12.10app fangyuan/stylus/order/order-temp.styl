*
 outline none
 font-family Droid Sans Fallback
.bgtemp
  height 100%
  width 100%
  position fixed
  left 0
  top 0
  background rgba(177,177,177,0.6)
  z-index 2




.temp
  position fixed
  width 270px
  height 110px
  background #fff
  left 50%
  top 50%
  transform translate(-50%,-50%)
  z-index 3
  border-radius 10px

  .c-t
    height 64px
    border-bottom 1px solid #d6d7dc
    text-align center
    line-height 64px
    font-size 1rem
    color #323232
  .c-b
    height 45px
    line-height 45px
    text-align center
    font-size 1.2rem
    display flex
    .b-l
      flex 1
      color #7f7f7f
      border-right 1px solid #d6d7dc
    .b-r
      color #ea5404
      flex 1