 body
   padding 0
 *
   list-style none
  .footer
      background #fff
      height 50px
      position fixed
      bottom 0
      width 100%
      border-top 1px solid #d6d7dc
      display flex
      .footer-li
         flex 1
         .limg1
           background url("../../APP切图/底部导航栏/bottom_press_icon04@2x.png") no-repeat center
         .limg2
           background url("../../APP切图/底部导航栏/bottom_nor_icon03@2x.png") no-repeat center
         .limg3
           background url("../../APP切图/底部导航栏/bottom_nor_icon02@2x.png") no-repeat center
         .limg4
           background url("../../APP切图/底部导航栏/bottom_nor_icon01@2x.png") no-repeat center
         .limid
           height 80%
           width 72%
           background url('../../APP切图/底部导航栏/bottom_icon05@2x.png') no-repeat center
           margin 0 auto
           border-radius 4px
           margin-top 6%
           background-size 100%
         .li1
           height 32px
           background-size 37% 80%
         .litxt
           height 18px
           line-height 18px
           text-align center
           font-size 0.9em
           color #b4b4b4
         .active
           color #ea5404
.slider-box
  height 320px
  width 100%
  position relative
  overflow hidden
  .slider
    height 320px
    width 400%
    .slider-img
       display inline-block
       float left
       height 320px
  .pointer
    position absolute
    height 30px
    width 100px
    bottom 10px
    left 50%
    transform translate(-50%,0)
    text-align center
    .p-li
      display inline-block
      height 20px
      width 20px
      background url("../../APP切图/首页/banner_icon_point_nor@2x.png") no-repeat center
      background-size 10px 10px
    .p-li1
      display inline-block
      height 20px
      width 20px
      background url("../../APP切图/首页/banner_icon_point_press@2x.png") no-repeat center
      background-size 10px 10px
.title
   width 100%
   min-height 85px
   position absolute
   z-index 3
   top 25px
   left 0
   .t-txt
     padding 10px
     height 30px
     display flex
     line-height 30px
     color #fff
     font-size 1.2em
     .t1
       flex 2
       background url("../../APP切图/首页/nav_icon_down@2x.png") no-repeat left 40px center
       background-size 10px 5px
     .t2
       flex 3
       text-align center
     .t3
       flex 2

   .t-search
     width 355px
     height 35px
     text-align center
     line-height 35px
     color #b4b4b4
     font-size 0.9em
     border-radius 4px
     background #fff url("../../APP切图/首页/banner_icon_search@2x.png") no-repeat left 28% center
     background-size 15px 15px
     margin 0 10px
.meu
  height 45px
  background #fff
  border-bottom 1px solid #d6d7dc
  display flex
  padding-left 0
  .m-li
    flex 1
    line-height 35px
    color #646464
    font-size 0.9em
    text-align center
    background url("../../APP切图/首页/content_icon02_nor@2x.png") no-repeat center bottom 10px
    background-size 10px 5px
    position relative
    &:after
      content ""
      display block
      position absolute
      height 18px
      width 1px
      background #d6d7dc
      right 0
      top 10px
  .m-li1
    flex 0.61
    background url("../../APP切图/首页/content_icon01_nor@2x.png") no-repeat center
    background-size 22px 21px













